        <Border x:Name="ResultBorder"
                Grid.Row="3"
                Background="#22FFFFFF"
                CornerRadius="8"
                Padding="12"
                Margin="15,0,15,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ResultPanel" VerticalAlignment="Center">
                    <!-- Question Text -->
                    <TextBlock x:Name="QuestionText"
                               Text=""
                               Foreground="#CCFFFFFF"
                               FontSize="13"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
