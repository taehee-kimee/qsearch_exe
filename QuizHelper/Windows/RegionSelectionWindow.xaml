<Window x:Class="QuizHelper.Windows.RegionSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Region"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#44000000"
        Topmost="True"
        WindowState="Maximized"
        Cursor="Cross"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="Window_KeyDown">

    <Canvas x:Name="SelectionCanvas">
        <!-- Instruction Text -->
        <TextBlock x:Name="InstructionText"
                   Text="Click and drag to select the capture area. Press ESC to cancel."
                   Foreground="White"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Canvas.Left="20"
                   Canvas.Top="20">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Selection Rectangle -->
        <Rectangle x:Name="SelectionRectangle"
                   Stroke="#FF4444"
                   StrokeThickness="2"
                   StrokeDashArray="4 2"
                   Fill="#22FF4444"
                   Visibility="Collapsed"/>
    </Canvas>
</Window>
